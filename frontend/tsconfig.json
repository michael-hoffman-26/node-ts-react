{
    "compilerOptions": {
        "target": "es5", // Target a lower ECMAScript version for broader browser support
        "lib": [
            "dom",
            "es6"
        ], // Include DOM and ES6 libraries for frontend
        "jsx": "react-jsx", // Enable JSX syntax with React 17+ JSX Transform
        "module": "esnext", // Use ES Modules for better tree shaking
        "moduleResolution": "node", // Use Node.js module resolution strategy
        "esModuleInterop": true, // Enable compatibility with CommonJS modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "strict": true, // Enable strict type checking
        "baseUrl": "./", // Base URL for module resolution (relative to this tsconfig)
        "paths": {
            "*": [
                "node_modules/*"
            ] // Path mapping for node modules
        },
        "outDir": "./dist", // Output directory for compiled JavaScript files
        "sourceMap": true, // Generate source maps for debugging
        "resolveJsonModule": true // Allow importing JSON files as modules
    },
    "include": [
        "src/**/*" // Include all TypeScript files in the src directory
    ],
    "exclude": [
        "node_modules", // Exclude node_modules to speed up compilation
        "dist" // Exclude the dist directory from being compiled
    ]
}